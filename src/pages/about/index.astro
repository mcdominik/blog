---
import { ABOUT_TITLE, ABOUT_DESCRIPTION } from "../../config.ts";

import Footer from "$components/Footer.astro";
import Header from "$components/Header.astro";
import BaseLayout from "$layouts/BaseLayout.astro";
import BlogPost from "$layouts/BlogPost.astro";
import { Content } from "$content/info/about.mdx";
---

<BaseLayout title={ABOUT_TITLE} description={ABOUT_DESCRIPTION}>
  <Header active="about" />

  <main class="max-w-2xl lg:max-w-3xl mx-auto mt-8 px-4">
    <BlogPost>
      <Content />
    </BlogPost>
  </main>

  <Footer />
</BaseLayout>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    window.posthog?.capture('about_page_viewed');
  });
</script>
